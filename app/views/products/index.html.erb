<h1>Products</h1>
	
	

<%= form_tag(:method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search for" %>
      <%= submit_tag("Search") %>
  
    </div>
  <% end %>

	<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Ending time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    	<% if @data.empty? %>
    	<td> No results..</td>
    	<%else %>
			<% @data.each do |item| %>
	      <tr>
	        <td><%= item.name %></td>
	        <td><%= item.price %></td>
	        <td><%= item.ending_time %></td>
	        
	      </tr>
	    		<% end %>
    	<%end %>
  </tbody>
</table>

<br>
