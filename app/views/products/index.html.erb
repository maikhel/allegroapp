<h1>Products</h1>
	

<br>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name </th>
        <th>Price</th>
        <th>Ending time </th>
        <th>Image</th>
        
      </tr>
    </thead>
    <tbody>
    
      <% @items.each do |item| %>
      <tr>
  	        <td><%= item.name %>
            <a href="<%= item.link %>" class="btn btn-link ">More</a><br>
           
            <%= link_to "Save item", products_path({:product => item.to_hash}), :method=> :post, remote: true, class: "btn btn-info", id: item.allegro_id %>
          
            </td>
  	        <td><%= item.price %> z≈Ç</td>
  	        <td><%= item.ending_time.to_s[0..15] %></td>
  	        <td><img src="<%= item.thumb_url %>" class="img-thumbnail"></td>
  	   </tr>
        
      <% end %>
    </tbody>
  </table>
</div>
