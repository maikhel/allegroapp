
<div class="col-md-3">
  <div class="well sidebar-nav">
      <h3>Categories</h3>
      <div class="btn-group" data-toggle="buttons">
      <%= @categories.each do |key,value| %>
        <label class="btn btn-primary">
        <input type="radio" name="<%= key%>" id="<%= value%>" autocomplete="off" checked> <%= key %>
        </label><br>
      <% end %>
    </div>
  </div>
</div>

